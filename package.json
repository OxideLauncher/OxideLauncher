{
	"name": "@oxide/monorepo",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"app:dev": "turbo run dev --filter=@oxide/app",
		"app:build": "turbo run build --filter=@oxide/app",
		"build": "turbo run build --continue",
		"lint": "turbo run lint lint:ancillary --continue",
		"lint:ancillary": "prettier --check .github *.*",
		"test": "turbo run test --continue",
		"fix": "turbo run fix fix:ancillary --continue",
		"fix:ancillary": "prettier --write .github *.*",
		"ci": "turbo run lint test --continue",
		"prepr": "turbo run prepr --continue",
		"prepr:frontend:lib": "turbo run prepr --filter=@oxide/ui --filter=@oxide/assets --filter=@oxide/api-client --filter=@oxide/utils --filter=@oxide/tooling-config",
		"prepr:frontend:app": "turbo run prepr --filter=@oxide/app-frontend",
		"icons:add": "pnpm --filter @oxide/assets icons:add",
		"scripts": "node scripts/run.mjs"
	},
	"devDependencies": {
		"@oxide/tooling-config": "workspace:*",
		"if-ci": "^3.0.0",
		"prettier": "^3.3.2",
		"turbo": "^2.5.4",
		"vue": "^3.5.13"
	},
	"packageManager": "pnpm@9.15.0",
	"prettier": "@oxide/tooling-config/prettier.config.cjs"
}
